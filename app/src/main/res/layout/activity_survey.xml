<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SurveyActivity">

    <TextView
        android:id="@+id/tvArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Selamat datang di sistem survey BPOM" />

    <TextView
        android:id="@+id/tvInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:gravity="center"
        android:onClick="insert"
        android:padding="15dp"
        android:textStyle="bold"
        android:text="Insert Responden"
        android:textAllCaps="true"
        android:textColor="@android:color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_above="@id/tvInsert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvArea"
        android:scrollbars="vertical"/>

</RelativeLayout>